            app:toggle_textColor="@color/black"
            app:toggle_textSize="15sp"

            app:toggle_borderColor="@color/teal_700"
            app:toggle_circularCornerRadius="true"
            app:toggle_btnCornerRadius="50dp"

            app:toggle_selectedBackgroundColor="@color/light_blue"
            app:toggle_selectedTextColor="@color/black"
            app:toggle_selectedBorderColor="@color/black"
            app:toggle_selectedBorderWidth="8dp"

 />

