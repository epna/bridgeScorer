        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/btnGroupCouleur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:flexWrap="wrap"
            app:toggle_horizontalSpacing="15dp"
            app:toggle_selectedBorderColor="@color/black"
            app:toggle_selectedBorderWidth="6dp"
            app:justifyContent="center" >

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnTrefle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                app:toggle_borderWidth="2dp"
                app:toggle_selectedBorderWidth="6dp"
                app:toggle_backgroundColor="@color/white"
                app:toggle_selectedBackgroundColor="@color/light_blue"

                app:toggle_text="" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnCarreau"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:toggle_borderWidth="2dp"
                app:toggle_selectedBorderWidth="6dp"
                app:toggle_backgroundColor="@color/white"
                app:toggle_selectedBackgroundColor="@color/light_blue"

                app:toggle_text="" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnCoeur"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:toggle_borderWidth="2dp"
                app:toggle_selectedBorderWidth="6dp"
                app:toggle_backgroundColor="@color/white"
                app:toggle_selectedBackgroundColor="@color/light_blue"

