        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>


        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/btnGroupContre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:toggle_horizontalSpacing="15dp"
            app:toggle_selectedBorderColor="@color/black"
            app:toggle_selectedBorderWidth="10dp"
            app:justifyContent="center"> <!-- this attribute is from the underlying FlexboxLayout -->

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnNonContre"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                app:toggle_backgroundColor="@color/green"
                app:toggle_selectedBackgroundColor="@color/green"
                app:toggle_borderWidth="2dp"
                app:toggle_selectedBorderWidth="8dp"
                app:toggle_textColor="@color/white"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_textSize="15sp"
                app:toggle_borderColor="@color/black"

                app:toggle_text="P" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnContre"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                app:toggle_backgroundColor="@color/red"
                app:toggle_selectedBackgroundColor="@color/red"
                app:toggle_borderWidth="2dp"
                app:toggle_selectedBorderWidth="8dp"
                app:toggle_textColor="@color/white"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_borderColor="@color/black"
                app:toggle_textSize="15sp"

                app:toggle_text=" X " />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnSurContre"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                app:toggle_backgroundColor="@color/blue_violet"
                app:toggle_selectedBackgroundColor="@color/blue_violet"
                app:toggle_borderWidth="2dp"
                app:toggle_selectedBorderWidth="8dp"
                app:toggle_textColor="@color/white"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_textSize="15sp"
                app:toggle_borderColor="@color/black"

                app:toggle_text=" XX" />
       </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>


</androidx.appcompat.widget.LinearLayoutCompat>